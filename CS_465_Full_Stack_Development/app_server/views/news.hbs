<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
	{{> head }}
	<body>
		<div id="background">
			<div id="page">
				<!-- Set handlebars to fetch HTML from ./partials/footer.hbs -->
				{{> header }}
				<div id="contents">
					<div class="box">
						<div>
							<div id="news" class="body">
								<div class="sidebar">
									<h3>Latest News</h3>
									<ul>
										<!-- Loop to parse passed data through controllers res, from the news.json file -->
										{{#each news_data.latest_news}}
										<li><a href="/api/news/latest_news/{{title}}">{{title}}</a></li>
										{{/each}}
									</ul>
									<h3>Vaction Tips</h3>
									<ul>
										{{#each news_data.vacation_tips}}
										<li><a href="/api/news/vacation_tips/{{title}}">{{title}}</a></li>
										{{/each}}
									</ul>
								</div>
								<div>
									<!-- Parse passed data through controllers res, from the rooms.json file -->
									<h1>News</h1>
									<img src="images/{{news_data.News_main.image}}" alt="Img">
									<h2>{{news_data.News_main.title}}</h2>
									<span class="time">{{news_data.News_main.date}}<br> by: {{news_data.News_main.author}}</span>
									<!-- Render paragraphs in a loop -->
									{{#each news_data.News_main.content}}
									<p>{{this}}</p>
									{{/each}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Set handlebars to fetch HTML from ./partials/footer.hbs -->
			{{> footer }}
		</div>
	</body>
</html>