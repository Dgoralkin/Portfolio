<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
	{{> head }}
	<body>
		<div id="background">
			<div id="page">
				<!-- Set handlebars to fetch HTML from ./partials/header.hbs -->
				{{> header }}
				<div id="contents">
					<div class="box">
						<div>
							<div class="body">
								<h1>Rooms</h1>
								<ul id="rooms">
									<!-- Loop to parse passed data through controllers res, from the rooms.json file -->
									{{#each rooms_data}}
									<li>
										<a href="/api/rooms/{{this.name}}"><img src="images/{{image}}" alt="Img"></a>
										<h2><a href="/api/rooms/{{this.name}}">{{name}}</a></h2>
										<p>
											{{description}}
										</p>
										<span class="rate">{{rate}}</span>
									</li>
									{{/each}}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- Set handlebars to fetch HTML from ./partials/footer.hbs -->
			{{> footer }}
		</div>
	</body>
</html>